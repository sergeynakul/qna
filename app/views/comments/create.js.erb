$('.notice').html('<%= notice %>');
<% resource = @comment.commentable.class.to_s.downcase %>
$('.<%= resource %>-comment-errors').html('<%= render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
$('.<%= resource %>-comments').append('<%= j render @comment %>');
$('.<%= resource %> #comment_body').val('');
<% end %>